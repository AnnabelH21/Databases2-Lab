<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gameshop.sales.SalesController"
            prefHeight="400.0" prefWidth="600.0">
    <Label text="Finanzübersicht" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
    <HBox spacing="15.0" alignment="CENTER_LEFT" style="-fx-background-color: #ffffff; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #dcdde1; -fx-border-radius: 5;">
        <children>
            <Label text="Zeitraum wählen:" style="-fx-font-weight: bold;" />
                <ComboBox fx:id="monthPicker" promptText="Choose a month"/>
                <ComboBox fx:id="yearPicker" promptText="Choose a year"/>
            <Separator orientation="VERTICAL" />
            <Button text="Umsatz" onAction="#handleCalculateSales"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 5; -fx-cursor: hand;" />

            <Label fx:id="infoLabel" textFill="#2f3640" style="-fx-font-weight: bold"/>
            <Label fx:id="revenueLabel"/>
        </children>
    </HBox>

    <TableView fx:id="salesTable">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="colId" minWidth="80.0" prefWidth="90.0" text="Bestellung ID"/>
            <TableColumn fx:id="colGameId" minWidth="60.0" prefWidth="70.0" text="Spiel ID"/>
            <TableColumn fx:id="colGameName" minWidth="150.0" prefWidth="300.0" text="Spiel"/>
            <TableColumn fx:id="colAmount" minWidth="60.0" prefWidth="70.0" text="Anzahl"/>
            <TableColumn fx:id="colPrice" minWidth="80.0" prefWidth="100.0" text="Preis"/>
            <TableColumn fx:id="colSalesDate" minWidth="110.0" prefWidth="130.0" text="Verkaufsdatum"/>
        </columns>
    </TableView>

</VBox>
