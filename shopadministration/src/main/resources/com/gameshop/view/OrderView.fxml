<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gameshop.controller.OrderController"
      prefHeight="400.0" prefWidth="600.0">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <Label text="Bestellungen" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <HBox spacing="15.0" alignment="CENTER_LEFT" style="-fx-background-color: #ffffff; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #dcdde1; -fx-border-radius: 5;">
        <children>
            <Label text="Aktion:" style="-fx-font-weight: bold;" />

            <ComboBox fx:id="statusComboBox" prefWidth="150.0" promptText="Status Ã¤ndern..." />

            <Button fx:id="btnUpdateStatus" text="Status aktualisieren" onAction="#handleStatusUpdate"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" />

            <Label fx:id="infoLabel" textFill="#2f3640" />
        </children>
    </HBox>
    <TableView fx:id="orderTable" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="colId" minWidth="80.0" prefWidth="90.0" text="Bestellung ID"/>
            <TableColumn fx:id="colGameId" minWidth="60.0" prefWidth="70.0" text="Spiel ID"/>

            <TableColumn fx:id="colName" minWidth="150.0" prefWidth="300.0" text="Spiel"/>

            <TableColumn fx:id="colStatus" minWidth="80.0" prefWidth="100.0" text="Status"/>
            <TableColumn fx:id="colAmount" minWidth="60.0" prefWidth="70.0" text="Anzahl"/>

            <TableColumn fx:id="colOrderDate" minWidth="110.0" prefWidth="130.0" text="Bestelldatum"/>
            <TableColumn fx:id="colDeliveryDate" minWidth="110.0" prefWidth="130.0" text="Lieferdatum"/>
        </columns>
    </TableView>
</VBox>
