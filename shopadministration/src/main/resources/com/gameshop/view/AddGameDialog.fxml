<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            headerText="Neues Spiel zum Inventar hinzufügen">
    <content>
        <GridPane>
            <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="nameField" promptText="z.B. Super Mario"
                       GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Preis (€):" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="priceField" promptText="z.B. 59.99"
                       GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Lagerbestand:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="stockField" promptText="Anzahl im Lager"
                       GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        </GridPane>

    </content>
</DialogPane>

